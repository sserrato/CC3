<div class="jumbotron" id="new">
<h1>Login to ConcreteC</h1>
  <%= form_tag sessions_path do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email], class: "form-control"%>

        <%= label_tag :password %>
        <%= password_field_tag :password, class: "form-control"%>

      </div>
      <div>
          <%= submit_tag "Log in", class: "btn btn-default" %> Not yet a member? <%= link_to "Sign up over here, it is really easy and quick", new_user_path %>
      </div>
  <% end %>
</div>
