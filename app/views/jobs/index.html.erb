<h1>Upcoming jobs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Start</th>
      <th>End</th>
      <th>Street</th>
      <th>City</th>
      <th>Job created</th>
      <th>Review</th>
    </tr>
    <tbody>
      <% @jobs.each do |j| %>
          <tr>
            <td><%= link_to j.id, job_path(j.id) %></td>
            <td><%=j.job_start.strftime('%a %b %e' +' 20''%y')%></td>
            <td><%= j.job_end.strftime('%a %b %e' +' 20''%y')%></td>
            <td><%=j.location_street %></td>
            <td><%=j.location_city%></td>
            <td><%= time_ago_in_words(j.created_at)+ " ago"%></td>
            <td><%#= link_to j.id, edit_job_path (j.id)%></td>
          <% end %>
          </tr>
    </tbody>
</table>

</div>
